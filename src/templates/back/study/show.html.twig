{% extends 'back/layout/base.html.twig' %}
{% block title_section %}My Studies{% endblock %}
{% block title %}Studies{% endblock %}

{% block title_content %}Study : {{ study.name }}{% endblock %}

{% block body %}

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ study.name }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ study.location }}</td>
            </tr>
            <tr>
                <th>Start Date</th>
                <td>{{ study.startDate ? study.startDate|date('Y') : '' }}</td>
            </tr>
            <tr>
                <th>End Date</th>
                <td>{{ study.current ? "Current" : (study.endDate ? study.endDate|date('Y') : '') }}</td>
            </tr>
            <tr>
                <th>Details</th>
                <td>{{ study.content|nl2br }}</td>
            </tr>
            <tr>
                    <th>Visible</th>
                    <td>{{ study.enabled ? "Yes" : "No" }}</td>
                </tr>
        </tbody>
    </table>

    <ul class='options'>
        <li><a href="{{ path('admin.study.index') }}"><button class='btn btn-warning'>Go back</button></a></li>
        <li> <a href="{{ path('admin.study.edit', {'id': study.id}) }}"><button class='btn btn-success'>Edit</button></a></li>
        <li>{{ include('back/study/_delete_form.html.twig') }}</li>
    </ul>

{% endblock %}
