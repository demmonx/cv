    <div class="col-md-3">
        <div class="main-box mb-grey">
            <a href="{{path("admin.setting.lang.index")}}">
                <i class="fa fa-globe fa-5x"></i>
                <h5>{{ langs | length}} available languages</h5>
            </a>
        </div>
    </div>
    <div class="col-md-3">
        <div class="main-box mb-blue">
            <a href="{{path("admin.hobby.index")}}">
                <i class="fa fa-coffee fa-5x"></i>
                <h5>{{ hobbies | length}} Hobbies</h5>
            </a>
        </div>
    </div>
    <div class="col-md-3">
        <div class="main-box mb-green">
            <a href="{{path("admin.study.index")}}">
