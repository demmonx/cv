{% extends 'back/layout/base.html.twig' %}
{% block title_section %}My skills{% endblock %}
{% block title %}Skills{% endblock %}

{% block title_content %}Soft Skills{% endblock %}

{% block body %}
<div>
        <a href="{{ path('admin.skill.soft.add') }}"><button class='text-uppercase btn btn-success'>Add new</button></a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for soft_skill in soft_skills %}
            <tr>
                <td>{{ soft_skill.name }}</td>
                <td>
                        <a href="{{ path('admin.skill.soft.edit', {'id': soft_skill.id}) }}"><button class='btn btn-info'>Edit</button></a> 
                        {{ include('back/skill/soft/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
